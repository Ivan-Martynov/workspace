#---------- VARIABLES -----------------------------------------------------#
# Compiler to use
COMPILER=g++

# Flags for compiler
CFLAGS=-Wall -std=c++14

# Flags for debugging, combine multiple flags with spaces (also variables)
DFLAGS=$(CFLAGS) -g

# Source files, separate multiple files with space, e.g. hello.c world.c
# List only .c -files, no headers
SOURCES=test_prime.cpp

# Name of the output file
OUTPUT=test_prime


#--------- COMMANDS --------------------------------------------------------#

# Syntax:
# <make command>:
# %tab%	<command>

# Build all
# "make"
all: build crash_course

# Build application
# "make build"
build:
	$(COMPILER) $(CFLAGS) $(SOURCES) -o $(OUTPUT)

# Build application with debugging information (use debug flags)
# "make debug"
debug:
	$(COMPILER) $(DFLAGS) $(SOURCES) -o $(OUTPUT)

# Remove generated files
# "make clean"
clean:
	rm $(OUTPUT)

crash_course:
	$(MAKE) -C crash_course

# Remove possible temp-files generated by editor (gedit)
# "make sanitize"
sanitize:
	rm *~
